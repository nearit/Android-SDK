<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.near.sdk">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!-- region messages -->
        <service android:name=".Beacons.Monitoring.RegionIntentService"
            android:exported="false"/>

        <!-- GCM registration -->
        <service android:name=".Push.GCMRegistration.RegistrationIntentService"
            android:exported="false">
        </service>

        <!-- push messages -->
        <!-- service that receives push from GCM and does internal SDK work -->
        <service
            android:name="it.near.sdk.Push.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <!-- internal service to send local notifications -->
        <service android:name=".Push.GcmIntentService"
            android:exported="false"/>

        <receiver
            android:name="it.near.sdk.Push.GcmBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="it.near.sdk.permission.PUSH_MESSAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>


        <service
            android:name=".Push.GCMRegistration.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>


    </application>

</manifest>
